<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.daydreamapplications.adapter.data.MaterialDesignListItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/visual_start"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            app:bindImage="@{viewModel.visual}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@android:color/holo_purple" />

        <TextView
            android:id="@+id/first_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:lines="1"
            android:singleLine="true"
            app:bindText="@{viewModel.firstLine}"
            app:layout_constraintBottom_toTopOf="@id/second_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/visual_start"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Three-line item" />

        <TextView
            android:id="@+id/second_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:lines="2"
            app:bindText="@{viewModel.secondLine}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/visual_start"
            app:layout_constraintTop_toBottomOf="@id/first_line"
            tools:text="Secondary line text, Lorem ipsum dolor sut amet, consectur adipiscing elit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
